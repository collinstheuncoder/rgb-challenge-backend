{
  "name": "rgb-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "babel -d ./dist ./src -s --copy-files",
    "client": "cd client && yarn start",
    "heroku-postbuild": "YARN_PRODUCTION=false yarn build && cd client && yarn && yarn build",
    "lint:check": "yarn eslint src/**",
    "lint:fix": "yarn eslint --fix src",
    "prebuild": "rm -rf dist",
    "start:dev": "SET NODE_ENV=development && nodemon --exec babel-node src/server.js",
    "start": "NODE_ENV=production && node dist/server.js"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.9.19",
    "morgan": "^1.10.0",
    "validator": "^13.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "engines": {
    "node": "12.8.0"
  }
}
